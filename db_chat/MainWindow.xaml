<Window x:Class="db_chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:db_chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="117" Width="276">
    <Grid Height="93" Margin="0,0,10,0">
        <Button x:Name="btnLogin" Content="Войти" HorizontalAlignment="Left" Margin="68,54,0,0" VerticalAlignment="Top" Width="77" Height="22" Click="btnLogin_Click"/>
        <Button x:Name="btnExit"  Content="Выйти" HorizontalAlignment="Left" Margin="161,54,0,0" VerticalAlignment="Top" Height="22" Width="77" Click="btnExit_Click"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="68,9,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="18"/>
        <TextBox x:Name="txtPassword"  HorizontalAlignment="Left" Margin="68,31,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="18"/>
        <Label Content="username" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Height="37"/>
        <Label Content="password" HorizontalAlignment="Left" Margin="0,27,0,0" VerticalAlignment="Top" Width="68" Height="37"/>
    </Grid>
</Window>
